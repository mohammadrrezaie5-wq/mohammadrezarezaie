    <script>
        const form = document.getElementById('consultForm');
        const successMessage = document.getElementById('successMessage');
        const loading = document.getElementById('loading');
        const submitBtn = document.querySelector('.submit-btn');

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            loading.style.display = 'block';
            submitBtn.style.display = 'none';
            
            const checkboxes = document.querySelectorAll('input[name="topics"]:checked');
            const topics = Array.from(checkboxes).map(cb => cb.value).join(', ');
            
            const formData = new FormData(form);
            formData.append('selected_topics', topics);
            
            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                if (response.ok) {
                    successMessage.style.display = 'block';
                    form.reset();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                } else {
                    throw new Error('Submission failed');
                }
            } catch (error) {
                alert('متأسفانه خطایی رخ داد. لطفاً دوباره تلاش کنید.');
                submitBtn.style.display = 'block';
            } finally {
                loading.style.display = 'none';
            }
        });

        document.getElementById('phone').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>

